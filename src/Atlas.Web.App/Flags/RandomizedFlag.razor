@using Atlas.Web.App.Flags.Components

@page "/flags/random"

<div class="game">
    @if (!string.IsNullOrEmpty(_randomizedCca2))
    {
        <picture>
            <source srcset="@_flagSvgUri" type="image/svg+xml" />
            <img src="@_flagSvgUri" alt="Randomized flag" />
        </picture>
    }
    <div class="guess">
        @if (!_isGameFinished)
        {
            <CountryAutocomplete Guess="Guess" />
        }
        else
        {
            <GameOver Answer="@_answer"  />
        }
        <FlagGuesses />
    </div>
</div>
